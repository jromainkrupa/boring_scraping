<div class="max-w-xl mx-auto">
  <h2 class="text-4xl font-black mb-4">Let's talk about your project</h2>
  <p class="text-gray-600 text-lg mb-8">Tell us about your scraping needs and we'll get back to you within 24 hours.</p>

  <%= form_with(model: contact, class: "flex flex-col gap-6") do |form| %>
    <%= form.invisible_captcha :subtitle %>

    <% input_class = "w-full focus:ring-1 focus:ring-purple-500 focus-visible:outline-none p-4 border-2 border-gray-700 rounded-xl hover:border-black hover:shadow-[4px_4px_0px_rgba(0,0,0,1)] transform hover:translate-y-[-2px] transition-all duration-200" %>

    <%= form.text_field :name, 
      placeholder: "Name",
      required: true,
      class: input_class %>
    
    <%= form.text_field :email, 
      placeholder: "Email", 
      required: true,
      class: input_class %>
    
    <%= form.text_field :company_name, 
      placeholder: "Company Name", 
      required: true,
      class: input_class %>
    
    <%= form.text_area :message, 
      placeholder: "Tell us about your project", 
      rows: 4,
      required: true,
      class: input_class %>
    
    <%= form.submit "Let's do this!", 
      class: "w-full bg-purple-500 text-white font-bold p-4 rounded-xl border-2 border-black shadow-[4px_4px_0px_rgba(0,0,0,1)] hover:translate-y-[-2px] hover:shadow-[6px_6px_0px_rgba(0,0,0,1)] transition-all duration-200" %>
  <% end %>
</div>