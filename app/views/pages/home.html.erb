              "acceptedAnswer": {
                "@type": "Answer",
                "text": <%= faq[:question].to_json.html_safe %>
              }
            }<%= "," unless index == faqs.length - 1 %>
          <% end %>
        ]
      }
    </script>

    <%= render(AccordionComponent.new) do |accordion| %>
