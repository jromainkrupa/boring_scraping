<div class="space-y-4" data-controller="accordion">
  <% items.each do |item| %>
    <div class="rounded-lg overflow-hidden border-2 border-gray-700 shadow-[4px_4px_0px_rgba(0,0,0,1)]">
      <%# Trigger %>
      <button 
        id="<%= item.trigger_id %>"
        data-action="accordion#toggle"
        data-accordion-target="trigger"
        aria-controls="<%= item.content_id %>"
        class="w-full flex items-center justify-between bg-white p-4 text-left font-bold hover:bg-gray-50 transition-colors border-b-2 border-transparent"
        aria-expanded="false"
      >
        <%= item.title %>
        <%= render_svg "icons/chevron-down", 
          styles: "w-5 h-5 text-purple-500 transform transition-transform duration-200",
          data: { accordion_target: "icon" } 
        %>
      </button>

      <%# Content %>
      <div 
        id="<%= item.content_id %>"
        data-accordion-target="content"
        class="hidden bg-white text-gray-700 p-4"
        role="region"
        aria-labelledby="<%= item.trigger_id %>"
      >
        <%= item.content %>
      </div>
    </div>
  <% end %>
</div>
